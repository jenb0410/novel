<h1>Edit Chapter</h1>

<%= form_with(model: [@story, @chapter], local: true, method: "patch") do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control' %>

  <%= form.label :number %>
  <%= form.number_field :number, class: 'form-control' %>

  <%= form.label :content %>
  <%= form.text_area :content, class: 'form-control' %>

  <%= form.label :tag_ids %>
  <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name %>

  <%= form.submit "Update Chapter", class: 'btn btn-primary' %>
<% end %>
